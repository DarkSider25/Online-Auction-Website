<html>
<div class="card">
	<table style="margin: 0px;">
		<tr><td colspan="5"><h2>Products Available</h2></td></tr>
	
		<tr>
			<td><b><u>Product Name</u></b></td>
			<td><b><u>Image</u></b></td>
			<td><b><u>Description</u></b></td>
			<td><b><u>Category</u></b></td>
			<td><b><u>Minimum Bid</u></b></td>
		</tr>

		<% @r.each do |p| %>
			<tr>
				<td><%= p.name %></td>
				<td ><img src="<%= p.image %>" height="150" width="150" /></td>
				<td><%= p.description %></td>
				<td><%= p.category %></td>
				<td><%= p.min_bid %></td>
			</tr>	
		<% end %>
	</table>
</div>
</html>